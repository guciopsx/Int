<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<TabPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="interpreter.Controller">
   <tabs>
      <Tab closable="false" text="IDE">
         <content>
            <BorderPane fx:id="bp" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="700.0">
               <right>
                  <VBox prefHeight="400.0" prefWidth="108.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="odczytBtn" mnemonicParsing="false" onAction="#odczytBtnHnd" text="Odczyt" />
                        <Button fx:id="zapisBtn" mnemonicParsing="false" onAction="#zapisBtnHnd" text="Zapis" />
                        <Button fx:id="edytorClearBtn" mnemonicParsing="false" onAction="#edytorClearBtnHnd" text="Wyczyść edytor" />
                        <Button fx:id="konsolaClearBtn" mnemonicParsing="false" onAction="#konsolaClearBtnHnd" text="Wyczyść konsolę" />
                        <Button fx:id="runBtn" mnemonicParsing="false" onAction="#runBtnHnd" text="RUN" />
                        <Button fx:id="srcBTN" mnemonicParsing="false" onAction="#srcBtnHnd" text="SOURCE CODE" />
                     </children>
                  </VBox>
               </right>
               <center>
                  <VBox prefHeight="528.0" prefWidth="592.0" BorderPane.alignment="CENTER">
                     <children>
                        <TextArea fx:id="edytorTextArea" prefHeight="282.0" prefWidth="592.0" wrapText="true">
                           <font>
                              <Font name="Courier New" size="12.0" />
                           </font>
                        </TextArea>
                        <TextArea fx:id="konsolaTextArea" editable="false" focusTraversable="false" prefHeight="206.0" prefWidth="592.0" />
                     </children>
                  </VBox>
               </center>
            </BorderPane>
         </content>
      </Tab>
      <Tab closable="false" text="Dodatkowe Informacje">
         <content>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <center>
                  <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                     <children>
                        <TextArea fx:id="varTextArea" prefHeight="200.0" prefWidth="200.0" />
                        <TableView fx:id="listaTokenow" prefHeight="213.0" prefWidth="394.0">
                          <columns>
                            <TableColumn fx:id="nazwaColumn" editable="false" prefWidth="150.0" text="Nazwa" />
                            <TableColumn fx:id="wartoscColumn" editable="false" prefWidth="150.0" text="Wartość" />
                          </columns>
                        </TableView>
                     </children>
                  </VBox>
               </center>
            </BorderPane>
         </content>
      </Tab>
   </tabs>
</TabPane>
